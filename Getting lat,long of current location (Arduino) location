#include <TinyGPS++.h>
#include <SoftwareSerial.h>
//Two libraries

static const int RXPin = 4, TXPin = 3;
static const uint32_t GPSBaud = 9600;

//created the tinyGPS++ object 
TinyGPSPlus gps;

//The aerial connnection with gps device
SoftwareSerial GPS(RXPin, TXPin);
//here we have this 4th pin as RX and 3rd pin as TX

void setup() {
  Serial.begin(9600);
  GPS.begin(GPSBaud);
}

void loop() {
  while (GPS.available() > 0) {
    // read the value of gps using encode 
    gps.encode(GPS.read());
    if (gps.location.isUpdated()) {
      Serial.print("Lattitude : ");
      Serial.print(gps.location.lat(), 6);
      //will get 6 values after the decimal
      Serial.print("Longitude : ");
      Serial.print(gps.location.lng(), 6);
      //6 values after the decimal
    }
  }
}
